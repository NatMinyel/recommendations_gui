<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="720.0" style="-fx-background-color: transparent;"
            xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.controllers.LoginController">
    <children>
        <StackPane layoutX="7.0" layoutY="7.0" prefHeight="150.0" prefWidth="200.0" AnchorPane.bottomAnchor="10.0"
                   AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <effect>
                <DropShadow/>
            </effect>
            <children>
                <HBox onMouseDragged="#dragged" onMousePressed="#pressed" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <VBox style="-fx-background-color: #fe4451;" HBox.hgrow="ALWAYS"/>
                        <VBox style="-fx-background-color: white;" stylesheets="@../styles.css" HBox.hgrow="ALWAYS">
                            <children>
                                <fx:include source="titlebar.fxml"/>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                    <StackPane.margin>
                        <Insets bottom="45.0" left="45.0" right="45.0" top="45.0"/>
                    </StackPane.margin>
                    <children>
                        <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="350.0"
                              prefWidth="350.0" style="-fx-background-color: white;">
                            <effect>
                                <DropShadow/>
                            </effect>
                            <Text style="-fx-font-size: 2em; -fx-font-family: Roboto; -fx-font-weight: bold; -fx-fill: #ff3b49;"
                                  text="Login"/>
                            <HBox alignment="CENTER_RIGHT" maxWidth="-Infinity" prefWidth="250.0"
                                  style="-fx-background-color: white;">
                                <VBox.margin>
                                    <Insets top="30.0"/>
                                </VBox.margin>
                                <children>
                                    <JFXTextField fx:id="tf_username" focusColor="#ff3b49" promptText="Username"
                                                  HBox.hgrow="ALWAYS">
                                        <HBox.margin>
                                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                        </HBox.margin>
                                        <font>
                                            <Font name="Roboto Mono" size="12.0"/>
                                        </font>
                                    </JFXTextField>
                                    <FontAwesomeIcon fill="GREY" iconName="USER" strokeType="OUTSIDE" strokeWidth="0.0">
                                        <HBox.margin>
                                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                        </HBox.margin>
                                    </FontAwesomeIcon>
                                </children>
                            </HBox>
                            <HBox alignment="CENTER_RIGHT" maxWidth="-Infinity" prefWidth="250.0"
                                  style="-fx-background-color: white;">
                                <children>
                                    <JFXPasswordField fx:id="pf_password" focusColor="#ff3b49" promptText="Password"
                                                      HBox.hgrow="ALWAYS">
                                        <HBox.margin>
                                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                        </HBox.margin>
                                        <font>
                                            <Font name="Roboto Mono" size="12.0"/>
                                        </font>
                                    </JFXPasswordField>
                                    <FontAwesomeIcon fill="GREY" iconName="KEY" strokeType="OUTSIDE" strokeWidth="0.0">
                                        <HBox.margin>
                                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                        </HBox.margin>
                                    </FontAwesomeIcon>
                                </children>
                                <VBox.margin>
                                    <Insets top="30.0"/>
                                </VBox.margin>
                            </HBox>
                            <JFXButton mnemonicParsing="false" onMouseClicked="#login" prefWidth="180.0"
                                       style="-fx-background-color: #ff3b49; -fx-background-radius: 100px;" text="Login"
                                       textFill="WHITE">
                                <VBox.margin>
                                    <Insets top="30.0"/>
                                </VBox.margin>
                            </JFXButton>
                            <HBox alignment="BOTTOM_CENTER" VBox.vgrow="ALWAYS">
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                </padding>
                                <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0"
                                          style="-fx-font-weight: bold; -fx-font-family: Roboto;"
                                          text="Need an account? ">
                                        <HBox.margin>
                                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                        </HBox.margin>
                                    </Text>
                                    <Text fill="#ff3b49" layoutX="126.0" layoutY="113.0" onMouseClicked="#signup"
                                          strokeType="OUTSIDE" strokeWidth="0.0"
                                          style="-fx-font-weight: bold; -fx-font-family: Roboto;" text="Sign up">
                                        <HBox.margin>
                                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                        </HBox.margin>
                                    </Text>
                                </children>
                            </HBox>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
</AnchorPane>
